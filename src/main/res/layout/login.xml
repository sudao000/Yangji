<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a04">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="请输入密码："
        android:id="@+id/textView"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="151dp"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pwd"
        android:layout_marginTop="28dp"
        android:hint="请输入密码"
        android:textSize="24sp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:alpha="0.7" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="登录"
        android:id="@+id/bt_login"
        android:textSize="20dp"
        android:background="@color/highlighted_text_material_light"
        android:layout_below="@+id/pwd"
        android:layout_alignStart="@+id/pwd" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="取消"
        android:id="@+id/bt_qux"
        android:layout_alignBottom="@+id/bt_login"
        android:layout_alignEnd="@+id/pwd"
        android:textSize="20sp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:background="@color/highlighted_text_material_light" />

</RelativeLayout>
