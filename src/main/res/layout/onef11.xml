        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="液位："
        android:id="@+id/textView70"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/textView69"
        android:layout_alignLeft="@+id/textView60"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="00.00"
        android:id="@+id/tv_con"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView68"
        android:layout_toRightOf="@+id/textView68" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="00.00"
        android:id="@+id/tv_pre"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/tv_con"
        android:layout_below="@+id/tv_con"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="00.00"
        android:id="@+id/tv_level"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/tv_pre"
        android:layout_alignLeft="@+id/tv_con"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="启动"
        android:id="@+id/bt_start"
        android:layout_marginTop="35dp"
        android:background="#1db249"
        android:textSize="20dp"
        android:layout_below="@+id/textView70"
        android:layout_alignEnd="@+id/textView70" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="停止"
        android:id="@+id/bt_stop"
        android:background="#b20720"
        android:textSize="20dp"
        android:layout_alignTop="@+id/bt_start"
        android:layout_toEndOf="@+id/textView67"
        android:textColor="#c5f330" />
