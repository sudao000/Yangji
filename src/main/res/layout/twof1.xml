<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/rl01">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="twof1"
        android:id="@+id/tx_02"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:layout_marginLeft="170dp"
        android:layout_marginBottom="20dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:clickable="false"
        android:focusable="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_date"
        android:hint="2016-01-01"
        android:textColor="#000000"
        android:paddingBottom="3dp"
        android:layout_marginRight="50dp"
        android:layout_toEndOf="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:inputType="datetime"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="选择日期："
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="90dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="确定"
        android:id="@+id/bt_sure"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="80dp"
        android:background="#dd52c588"
        android:textSize="22dp"
        android:alpha="0.8"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_limit"
        android:hint="上限设置"
        android:textColor="#000000"
        android:paddingBottom="3dp"
        android:layout_toEndOf="@+id/textView6"
        android:layout_alignRight="@+id/et_date"
        android:layout_alignBottom="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="上限设置："
        android:id="@+id/textView6"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_above="@+id/textView3"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="实时"
        android:id="@+id/bt_now"
        android:layout_marginLeft="40dp"
        android:background="#dd52c588"
        android:textSize="22dp"
        android:alpha="0.8"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_toRightOf="@+id/bt_sure"
        android:layout_alignBottom="@+id/bt_sure" />

    <com.github.mikephil.charting.charts.LineChart
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/linechart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>