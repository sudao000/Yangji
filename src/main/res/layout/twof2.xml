<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl2"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.github.mikephil.charting.charts.BarChart
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/barchart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="twof2"
        android:id="@+id/tx_01"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:layout_marginLeft="180dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="上限设置："
        android:id="@+id/textView7"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_above="@+id/textView8"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_date2"
        android:hint="2016-01-01"
        android:textColor="#000000"
        android:paddingBottom="3dp"
        android:inputType="datetime"
        android:layout_marginRight="24dp"
        android:layout_toEndOf="@+id/textView8"
        android:layout_alignBottom="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="选择日期："
        android:id="@+id/textView8"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_limit2"
        android:hint="上限设置"
        android:textColor="#000000"
        android:paddingBottom="3dp"
        android:layout_toEndOf="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignRight="@+id/et_date2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="确定"
        android:id="@+id/bt_sure2"
        android:layout_marginLeft="80dp"
        android:background="#dd52c588"
        android:textSize="22dp"
        android:alpha="0.8"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/et_date2"
        android:layout_toStartOf="@+id/et_date2"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="28dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="实时"
        android:id="@+id/bt_now2"
        android:background="#dd52c588"
        android:textSize="22dp"
        android:alpha="0.8"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignTop="@+id/bt_sure2"
        android:layout_toEndOf="@+id/tx_01" />
</RelativeLayout>