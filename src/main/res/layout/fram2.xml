<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/rl01">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/tx_02"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:clickable="false"
        android:focusable="false" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_date"
        android:hint="2016-1-1"
        android:textColor="#000000"
        android:paddingBottom="3dp"
        android:layout_marginRight="50dp"
        android:layout_toEndOf="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:inputType="datetime"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="选择日期："
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_marginLeft="90dp"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="确定"
        android:id="@+id/bt_sure"
        android:layout_marginLeft="150dp"
        android:background="#dd52c588"
        android:textSize="22dp"
        android:alpha="0.8"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_linelimit"
        android:hint="上限设置"
        android:textColor="#000000"
        android:paddingBottom="3dp"
        android:layout_toEndOf="@+id/textView6"
        android:layout_alignRight="@+id/et_date"
        android:layout_alignBottom="@+id/textView6"
        android:gravity="center_horizontal"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="压力上限："
        android:id="@+id/textView6"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="90dp"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="实时"
        android:id="@+id/bt_now"
        android:layout_marginLeft="60dp"
        android:background="#bf3bd3eb"
        android:textSize="22dp"
        android:alpha="0.8"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/bt_sure"
        android:layout_marginTop="10dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fr">
        <com.github.mikephil.charting.charts.LineChart
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/linechart"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />
        <com.github.mikephil.charting.charts.BarChart
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/barchart"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="产水下限："
        android:id="@+id/textView9"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="90dp"
        android:layout_toStartOf="@+id/et_linelimit"
        android:layout_below="@+id/fr"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_barlimit"
        android:hint="下限设置"
        android:textColor="#000000"
        android:paddingBottom="3dp"
        android:layout_alignRight="@+id/et_date"
        android:layout_toEndOf="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignParentTop="false"
        android:gravity="center_horizontal"
        android:inputType="numberDecimal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="流量"
        android:id="@+id/bt_change"
        android:background="#bf3bd3eb"
        android:textSize="22dp"
        android:alpha="0.8"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_toEndOf="@+id/bt_sure"
        android:layout_alignBottom="@+id/bt_now" />


</RelativeLayout>