<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6fa3eb">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="输入："
        android:id="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:textColor="#000000"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="进水低液位："
        android:id="@+id/textView7"
        android:textColor="#FF000000"
        android:textSize="20dp"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/im_inl"
        android:src="@drawable/redcircle"
        android:layout_below="@+id/textView5"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="进水高液位："
        android:id="@+id/textView8"
        android:textColor="#FF000000"
        android:textSize="20dp"
        android:layout_toEndOf="@id/im_inl"
        android:layout_marginLeft="15dp"
        android:layout_alignBottom="@+id/textView7" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/im_inh"
        android:src="@drawable/redcircle"
        android:layout_alignBottom="@+id/im_inl"
        android:layout_toEndOf="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="产水低液位："
        android:id="@+id/textView10"
        android:textColor="#FF000000"
        android:textSize="20dp"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/im_outl"
        android:src="@drawable/redcircle"
        android:layout_below="@+id/im_inl"
        android:layout_alignLeft="@+id/im_inl"
        android:layout_marginTop="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="进水高液位："
        android:id="@+id/textView11"
        android:textColor="#FF000000"
        android:textSize="20dp"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView8"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/im_outh"
        android:src="@drawable/redcircle"
        android:layout_below="@+id/im_inh"
        android:layout_alignLeft="@+id/im_inh"
        android:layout_marginTop="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="输出："
        android:id="@+id/textView12"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_below="@+id/im_outl"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="进水泵："
        android:id="@+id/textView13"
        android:textColor="#FF000000"
        android:textSize="20dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/textView12"
        android:layout_marginLeft="8dp"
        android:layout_alignRight="@+id/textView10" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/im_jsb"
        android:src="@drawable/redcircle"
        android:layout_toEndOf="@+id/textView13"
        android:layout_below="@+id/textView12"
        android:layout_alignLeft="@+id/im_inl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="反洗泵："
        android:id="@+id/textView14"
        android:textColor="#FF000000"
        android:textSize="20dp"
        android:layout_marginLeft="0dp"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignRight="@+id/textView8" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/im_fxb"
        android:src="@drawable/redcircle"
        android:layout_alignParentEnd="false"
        android:layout_alignTop="@+id/im_jsb"
        android:layout_alignLeft="@+id/im_outh" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="产水阀："
        android:id="@+id/textView15"
        android:textColor="#FF000000"
        android:textSize="20dp"
        android:layout_below="@+id/textView13"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="正进阀："
        android:id="@+id/textView16"
        android:textColor="#FF000000"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView15"
        android:layout_alignStart="@+id/textView15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="反进阀："
        android:id="@+id/textView17"
        android:textColor="#FF000000"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView16"
        android:layout_alignStart="@+id/textView16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="进气阀："
        android:id="@+id/textView18"
        android:textColor="#FF000000"
        android:textSize="20dp"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignStart="@+id/textView14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="正排阀："
        android:id="@+id/textView19"
        android:textColor="#FF000000"
        android:textSize="20dp"
        android:layout_alignTop="@+id/textView16"
        android:layout_alignStart="@+id/textView18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="反排阀："
        android:id="@+id/textView20"
        android:textColor="#FF000000"
        android:textSize="20dp"
        android:layout_alignTop="@+id/textView17"
        android:layout_alignStart="@+id/textView19" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/im_csf"
        android:src="@drawable/redcircle"
        android:layout_below="@+id/im_jsb"
        android:layout_alignLeft="@+id/im_jsb"
        android:layout_marginTop="13dp" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/im_jqf"
        android:src="@drawable/redcircle"
        android:layout_alignBottom="@+id/im_csf"
        android:layout_alignStart="@+id/im_fxb" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/im_zjf"
        android:src="@drawable/redcircle"
        android:layout_below="@+id/im_csf"
        android:layout_alignLeft="@+id/im_csf"
        android:layout_marginTop="13dp" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/im_zpf"
        android:src="@drawable/redcircle"
        android:layout_alignLeft="@+id/im_jqf"
        android:layout_alignTop="@+id/im_zjf" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/im_fjf"
        android:src="@drawable/redcircle"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/im_zjf"
        android:layout_alignLeft="@+id/im_zjf" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/im_fpf"
        android:src="@drawable/redcircle"
        android:layout_alignTop="@+id/im_fjf"
        android:layout_alignLeft="@+id/im_zpf" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="注："
        android:id="@+id/textView21"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="52dp"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_below="@+id/im_fjf"
        android:layout_alignStart="@+id/textView12" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView2"
        android:src="@drawable/redcircle"
        android:layout_alignTop="@+id/textView21"
        android:layout_toEndOf="@+id/textView21"
        android:layout_marginTop="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="表示&quot;0&quot;"
        android:id="@+id/textView22"
        android:textColor="#FF000000"
        android:textSize="20dp"
        android:layout_alignTop="@+id/textView21"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView3"
        android:src="@drawable/greencircle"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginLeft="50dp"
        android:layout_toEndOf="@+id/textView22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="表示&quot;1&quot;"
        android:id="@+id/textView23"
        android:textColor="#FF000000"
        android:textSize="20dp"
        android:layout_alignTop="@+id/textView22"
        android:layout_alignParentEnd="false"
        android:layout_toEndOf="@id/imageView3"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="运行状态"
        android:id="@+id/tx_status"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:textSize="22dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:background="#6ac02c" />
</RelativeLayout>