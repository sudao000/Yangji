<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_100"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="删除警告："
        android:id="@+id/textView"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginStart="47dp"
        android:layout_alignTop="@+id/bt_warn"
        android:layout_alignStart="@+id/textView55"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_warn"
        android:hint="选择日期"
        android:textSize="20dp"
        android:textColor="#000000"
        android:background="#ae51bcb3"
        android:layout_alignTop="@+id/textView"
        android:layout_alignStart="@+id/et_his" />

    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="确定"
        android:id="@+id/bt_warn"
        android:background="#b451aec1"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_his"
        android:hint="选择日期"
        android:textSize="20dp"
        android:textColor="#000000"
        android:background="#ae51bcb3"
        android:layout_alignTop="@+id/bt_his"
        android:layout_alignStart="@+id/et_makehis"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="确定"
        android:id="@+id/bt_his"
        android:background="#b451aec1"
        android:textSize="20dp"
        android:layout_below="@+id/bt_warn"
        android:layout_alignLeft="@+id/bt_warn"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="删除历史："
        android:id="@+id/textView53"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/bt_his"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="生成历史："
        android:id="@+id/textView54"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/et_makehis"
        android:layout_alignStart="@+id/textView53" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_makehis"
        android:hint="选择日期"
        android:textSize="20dp"
        android:textColor="#000000"
        android:background="#ae51bcb3"
        android:layout_alignTop="@+id/bt_makehis"
        android:layout_toEndOf="@+id/textView54"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="确定"
        android:id="@+id/bt_makehis"
        android:background="#b451aec1"
        android:textSize="20dp"
        android:layout_alignStart="@+id/bt_his"
        android:layout_below="@+id/bt_his"
        android:layout_alignLeft="@+id/bt_warn"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="IP地址："
        android:id="@+id/textView55"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="200dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_ip"
        android:hint="请输入IP地址"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_toEndOf="@+id/textView55"
        android:background="#ae51bcb3"
        android:layout_alignTop="@+id/textView55" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="端口号："
        android:id="@+id/textView56"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="0dp"
        android:layout_alignStart="@+id/textView55"
        android:layout_below="@+id/textView55"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_port"
        android:hint="请输入端口号"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_toEndOf="@+id/textView55"
        android:background="#ae51bcb3"
        android:layout_alignTop="@+id/textView56" />

    <Button
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="连接"
        android:id="@+id/bt_con"
        android:background="#b451aec1"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/textView56"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="接收区："
        android:id="@+id/tv_accept"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/et_port"
        android:layout_alignParentStart="true"
        android:background="#aae0e584"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_send"
        android:layout_alignBottom="@+id/bt_send"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/bt_send"
        android:background="#b1466db6"
        android:textColor="#000000"
        android:textSize="20dp"
        android:hint="输入信息："
        android:layout_alignTop="@+id/bt_send"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="发送"
        android:id="@+id/bt_send"
        android:background="#b451aec1"
        android:textSize="20dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/tv_accept"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp" />
</RelativeLayout>
